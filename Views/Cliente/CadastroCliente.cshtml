@model AulaDeASPNet.Models.Cliente
@{
    ViewData["Title"] = "Cadastro Cliente";
}
@* Formulário Cadastro Cliente *@
<div class="container">
    @* LINHA TITULO *@
    <div class="row">
        <div class="col text-center">
            <h1>❉ Cadastro Cliente ❉</h1>
        </div>
    </div>
    @* LINHA NOME E CPF *@
    <form method="post">
        <div class="row">
            <div class="col">
                <label for="" class="form-label fw-bolder">Nome Completo:</label>
                <input asp-for="Nome" type="text" class="form-control" id="Nome" />
            </div>
            <div class="col-lg-3">
                <label for="" class="form-label fw-bolder">CPF (Apenas Números):</label>
                <input asp-for="CPF" type="text" class="form-control" id="CPF" />
            </div>
            <div class="col-lg-3">
                <label for="" class="form-label fw-bolder">E-mail:</label>
                <input asp-for="Email" type="text" class="form-control" id="Email" />
            </div>
            <div class="col-lg-3">
                <label for="" class="form-label fw-bolder text-nowrap">Contato (Somente DDD e número):</label>
                <input asp-for="Telefone" type="text" class="form-control" id="Telefone" />
            </div>
        </div>
        @* LINHA ENDEREÇO *@
        <div class="row">
            <div class="col">
                <label for="" class="form-label fw-bolder">Endereço:</label>
                <input asp-for="Endereco" type="text" class="form-control" id="Endereco" />
            </div>
        </div>
        <div class="row mt-3 justify-content-md-end">
            <div class="col-3 d-flex justify-content-end">
                <input type="submit" class="btn btn-outline-info btn-lg" name="name" value="Cadastrar" />
            </div>
        </div>
    </form>
</div>
